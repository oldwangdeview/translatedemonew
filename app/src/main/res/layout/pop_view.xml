<?xml version="1.0" encoding="utf-8"?>
<translatedemo.com.translatedemo.recever.ViewContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    android:background="#77000000">

    <LinearLayout
        android:id="@+id/pop_view_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/translate_title_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_9c9fa1"
                android:text="@string/strideo_wb_type"/>

            <ImageView
                android:id="@+id/colose"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/guanbi"/>

        </LinearLayout>

        <TextView
            android:id="@+id/pop_view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:textColor="@color/c_ff333333"
            android:textStyle="bold"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/strideo_wb_yuanwenfay"/>

        <TextView
            android:id="@+id/returndata_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/c_ff333333"
            android:layout_marginTop="@dimen/dp_5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_weight="1"
                android:textColor="@color/c_9c9fa1"
                android:text="@string/aboutus_text_messageinfo"/>

            <Button
                android:id="@+id/moredata"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:text="更多翻译"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/c_ffffff"
                android:background="@drawable/login_but"/>
        </LinearLayout>
    </LinearLayout>

</translatedemo.com.translatedemo.recever.ViewContainer>