<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f5f5"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_title"/>
    <!--切换语言-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/c_ffffff">
    <LinearLayout
        android:id="@+id/seting_layout_choicelanguage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="@string/seting_text_choicelanguage"
            android:textColor="@color/c_ff333333"
            />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/c_e5e5e5"/>
    <!--跨软件翻译-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="@string/seting_text_fy"
            android:textColor="@color/c_ff333333"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center_vertical"
            android:text="已开启"
            android:textColor="#46cf3b"/>

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"

            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/c_e5e5e5"/>

    <!--账号安全-->
    <LinearLayout
        android:id="@+id/seting_layout_safecenter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="@string/seting_text_userandself"
            android:textColor="@color/c_ff333333"
            />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/c_e5e5e5"/>
    <!--关于我们-->
    <LinearLayout
        android:id="@+id/seting_layout_aboutus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="@string/seting_text_aboutus"
            android:textColor="@color/c_ff333333"
            />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/rejest_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:textSize="@dimen/sp_18"
            android:background="@color/c_ffffff"
            android:textColor="@color/c_e94950"
            android:gravity="center"
            android:text="@string/seting_text_outlogin"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
 
  
</LinearLayout>
