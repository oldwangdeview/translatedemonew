<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="translatedemo.com.translatedemo.activity.MainActivity">

    <translatedemo.com.translatedemo.view.ForbidScrollViewpager
        android:id="@+id/viewpager_activity_main"
        android:layout_width="match_parent"
        android:layout_above="@+id/navigation"
        android:layout_height="match_parent"

        >

    </translatedemo.com.translatedemo.view.ForbidScrollViewpager>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint = "@drawable/color_state_menu_navi"
        app:itemTextColor = "@drawable/color_state_menu_navi"
        app:menu="@menu/navigation" />

</RelativeLayout>
