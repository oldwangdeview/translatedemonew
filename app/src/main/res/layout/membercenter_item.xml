<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:paddingTop="@dimen/dp_1"
    android:paddingLeft="@dimen/dp_15"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1">

    <TextView
        android:id="@+id/mothone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/c_ff333333"
    android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    android:text="30天"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:minWidth="@dimen/dp_130"
            android:layout_centerVertical="true"
            android:gravity="left">
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_e94950"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                android:minWidth="@dimen/dp_50"
                android:layout_gravity="center"
                android:text="￥20.00"/>

            <TextView
                android:id="@+id/keshen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999999"
                android:visibility="gone"
                android:text="可省11元"/>
        </LinearLayout>





    <Button
        android:id="@+id/botton"
    android:layout_width="@dimen/dp_54"
    android:layout_height="@dimen/dp_25"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/shape_membercenter_btn"
    android:textSize="@dimen/sp_12"
        android:layout_centerVertical="true"
    android:textColor="@color/c_ffffff"
        android:layout_alignParentRight="true"
    android:text="@string/membercenter_text_openvip"
    android:layout_gravity="center_vertical"/>

    </RelativeLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_1"
    android:background="#f5f5f5"/>

    </LinearLayout>

</LinearLayout>
