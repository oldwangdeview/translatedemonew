                    <TextView
                        android:id="@+id/order_xzyhq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="right"
                        android:textColor="@color/c_e94950"/>

