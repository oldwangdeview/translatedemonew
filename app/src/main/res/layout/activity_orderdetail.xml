                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#f5f5f5"
                    android:layout_marginLeft="@dimen/dp_15"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:layout_marginLeft="@dimen/dp_15"
