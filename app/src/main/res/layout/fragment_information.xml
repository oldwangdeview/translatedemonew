<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/choice_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_ff333333"
            android:gravity="right"
            android:text="@string/translate_text_chinese"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/xiala"/>
        <ImageView
            android:id="@+id/qieh"
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:src="@mipmap/qiehuan"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"/>
        <TextView
            android:id="@+id/choice_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_ff333333"
            android:text="@string/translate_text_zangwen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/xiala"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/c_E6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:padding="@dimen/dp_15"
        >

        <EditText
            android:id="@+id/input_editet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/translate_text_translate1"
            android:textColorHint="#bfbfbf"
            android:imeOptions="actionGo"
            android:textColor="@color/c_ff333333"
            android:textSize="@dimen/sp_15"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@color/c_e5e5e5"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:paddingLeft="15dp"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:layout_height="match_parent">
            <translatedemo.com.translatedemo.view.YRecycleview
                android:layout_width="match_parent"
                android:id="@+id/yrecycleview_"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/translatedata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_200"
            android:id="@+id/data"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/banner"
            android:background="@color/c_f5f5f5"
            android:orientation="vertical">

        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@color/c_f5f5f5"
            android:id="@+id/banner"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_height="@dimen/dp_120">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/id_cb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:canLoop="true" />
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/history_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/c_f5f5f5"
        android:visibility="gone"
        android:orientation="vertical">
        <GridView
            android:id="@+id/history_data"
            android:layout_width="match_parent"
            android:background="@color/c_f5f5f5"
            android:layout_height="match_parent"
            android:numColumns="1"></GridView>
    </LinearLayout>


</LinearLayout>
