<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dp_15"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_e94950"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_27"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/myhome_line_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/fragment_translate_titleback">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/translate_text_zanghan"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantou"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:background="#f18d91"/>
                <EditText
                    android:id="@+id/myhome_line_top_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:hint="@string/translate_text_translate"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textSize="@dimen/sp_14"
                    android:textColorHint="#f18d91"
                    android:textColor="@color/c_ffffff"

                    />


            </LinearLayout>


        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/fragment_translateback"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_120">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/id_cb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:canLoop="true" />

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
