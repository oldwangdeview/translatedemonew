<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:background="@color/c_f5f5f5"
    android:visibility="visible">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:background="@drawable/getcoupon_shape"
        android:paddingBottom="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/sp_16"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text=""/>

            <TextView
                android:id="@+id/zf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_f84752"
                android:layout_gravity="bottom"
                android:text="ï¿¥"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_24"
                android:layout_gravity="bottom"
                android:textColor="@color/c_f84752"
                android:text="500"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tiaojian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_ff808080"
                    android:text="@string/getcoupon_text_tj"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/c_ff808080"
                    android:text="@string/getcoupon_text_rq"/>
            </LinearLayout>
            
            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/getcoupom_btn_shape1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_ffffff"
                android:text="@string/getcoupon_text_get"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
