<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff">
    <include layout="@layout/layout_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/headimage"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/mrtx"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="韩梅梅"
                            android:textStyle="bold"
                            android:textSize="@dimen/sp_18"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/c_ff333333"
                            />

                        <ImageView
                            android:id="@+id/vipimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/huiyuan1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/notviptext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_999999"
                        android:text="@string/membercenter_text_botvip"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ff333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="@string/membercenter_text_choicetc"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <translatedemo.com.translatedemo.view.MyGridView
                    android:id="@+id/mygridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:numColumns="1"></translatedemo.com.translatedemo.view.MyGridView>
            </LinearLayout>


            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999999"
                android:text="@string/membercenter_text_vipmessage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_20"

                android:paddingBottom="@dimen/dp_20"
                android:gravity="bottom"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_14"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/c_ff333333"
                    android:text="@string/membercenter_text_vipzx"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@mipmap/noad"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="@color/c_ff333333"
                            android:text="@string/membercenter_text_cjgg"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@mipmap/download"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="@color/c_ff333333"
                            android:text="@string/membercenter_text_hylxxz"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@mipmap/isvip"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="@color/c_ff333333"
                            android:text="@string/membercenter_text_zxhybs"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/c_f5f5f5"/>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/dp_15"
                       android:paddingRight="@dimen/dp_15"
                       android:descendantFocusability="blocksDescendants">
                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/cd_recyclerview"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dp_30"
                       android:paddingBottom="@dimen/dp_10"
                       ></android.support.v7.widget.RecyclerView>
                   </RelativeLayout>


                <TextView
                    android:id="@+id/member_text_xy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#df9852"
                    android:text="@string/membercenter_text_hyxy"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    
</LinearLayout>
