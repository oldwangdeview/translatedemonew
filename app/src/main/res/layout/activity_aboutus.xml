<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_60"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_ff333333"
                android:text="V1.0.1"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_55"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_35"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                android:text="@string/aboutus_text_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:text="@string/aboutus_text_phone"
                    />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#4a84ee"
                    android:text="15899865548"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:text="@string/aboutus_text_email"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:text="zangyufanyibao@sina.com"/>

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_140"
               android:gravity="bottom"
               android:orientation="vertical">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_12"
                   android:textColor="@color/c_999999"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/aboutus_text_messageinfo"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_12"
                   android:textColor="@color/c_e94950"
                   android:layout_marginTop="@dimen/dp_15"
                   android:layout_marginBottom="@dimen/dp_20"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/aboutus_text_xieyi"/>

           </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
