<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/c_ffffff">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:src="@mipmap/rengong"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pople_translate_text_ts"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            android:layout_marginTop="@dimen/dp_30"/>

        <LinearLayout
            android:id="@+id/open_qq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_40"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_people_btn_shape">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QQ:42556986"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                android:layout_marginLeft="@dimen/dp_15"/>

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/jiantou2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/open_wechart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_people_btn_shape">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wechat3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="微信：1589965896"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                />

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/jiantou2"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
