<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root_activity_baseperson"
    android:background="@color/c_ffffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/CC"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_back_activity_basepersoninfo"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:padding="@dimen/dp_3"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:src="@mipmap/fh" />

        <TextView
            android:id="@+id/tv_title_activity_baseperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_ff383838"
            android:textSize="@dimen/sp_16"
           />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:id="@+id/tv_small_title_layout_head"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/c_ff383838"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <View
        android:id="@+id/view_activity_baseperson"
        android:layout_width="match_parent"
        android:background="@color/c_e5e5e5"
        android:layout_height="@dimen/dp_1"/>

    <FrameLayout
        android:id="@+id/fl_content_activity_baseperson"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>
    



</LinearLayout>
