<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_editext_titl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:background="@drawable/shape_translate_title"
            android:hint="@string/translate_text_translate"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_ff333333"
            android:textColorHint="@color/c_999999"
            />

        <TextView
            android:id="@+id/title_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/c_ff333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:textStyle="bold"
            android:text="@string/translate_text_quxiao"
            />
        
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_19"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/titlerecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        >

        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/c_ff333333"
            android:textStyle="bold"
            android:gravity="top"
            android:focusable="false"
            android:cursorVisible="false"
           />
        <ImageView
            android:id="@+id/shared_image"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_toLeftOf="@+id/shouc_image"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/fenxiang2"/>

        <ImageView
            android:id="@+id/shouc_image"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
             android:scaleType="fitXY"
            android:src="@mipmap/shoucang3"
            android:layout_marginTop="@dimen/dp_2"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
                <ImageView
                    android:id="@+id/translate_iamge"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/bottom_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


        <LinearLayout
            android:id="@+id/translate_linyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/dp_280"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_120">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/id_cb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:canLoop="true" />

        </RelativeLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
