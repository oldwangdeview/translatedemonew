<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_activity_my_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            app:tabGravity="fill"
            app:tabTextAppearance="@style/TabLayoutTextSizeStyle"
            app:tabIndicatorColor="@color/c_e94950"
            android:background="@color/c_ffffffff"
            app:tabSelectedTextColor="@color/c_e94950"
            app:tabTextColor="@color/c_ff333333" />

    </LinearLayout>

  <translatedemo.com.translatedemo.view.ForbidScrollViewpager
  android:layout_width="match_parent"
  android:id="@+id/forbidScroll_viewpager_activity_my_order"
  android:layout_height="match_parent"/>


</LinearLayout>
